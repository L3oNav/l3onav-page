{
	"env": {
		"commonjs": true,
		"node": true
	},
	"extends": ["google"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"semi": ["warn", "always"],
		"quotes": ["error", "double"],
		"no-tabs": "off",
		"properties": 0,
		"ignoreImports": 0,
		"indent": [2, "tab"],
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "after-used",
				"ignoreRestSiblings": false
			}
		],
		"camelcase": [
			"error",
			{
				"properties": "always",
				"ignoreDestructuring": true,
				"ignoreImports": true,
				"allow": ["mysql_connection"]
			}
		],
		"object-curly-spacing": [
			"error",
			"always",
			{
				"objectsInObjects": false
			}
		],
		"new-cap": [
			"error",
			{
				"capIsNew": false
			}
		]
	}
}
